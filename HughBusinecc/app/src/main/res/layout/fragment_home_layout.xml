<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_fed952"
        android:padding="8dp">
        <TextView
            android:id="@+id/home_scan_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@drawable/bar_code_scan_icon"
        />

        <TextView
            android:id="@+id/home_loin_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/category"
        />
        <TextView
            android:id="@+id/home_search_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@id/home_loin_image"
            android:layout_toRightOf="@id/home_scan_image"
            android:background="@drawable/home_edit_view"
            android:gravity="center"
            android:padding="6dp"
            android:text="请输入你要查找的宝贝"
            android:textSize="16sp"
            android:layout_alignParentTop="true" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/loading_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="center"
        android:src="@drawable/home_animation_list"

    />
</LinearLayout>
